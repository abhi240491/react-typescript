{
    "compilerOptions":{
        "target":"es6",
        "lib":[
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "jsx": "react-jsx",
        "noEmit": true,
        "allowJs": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src"
    ]
}
